{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "lib": [ "ES2016" ],
    "jsx": "preserve",
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "removeComments": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "typeRoots": [ "node_modules/@types" ],
    "allowSyntheticDefaultImports": true,
    "sourceRoot": "./",
    "mapRoot": "./"
  },
  "include": [
    "src"
  ]
}
